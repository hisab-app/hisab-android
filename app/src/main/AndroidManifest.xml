<?xml version="1.0" encoding="utf-8"?>
<manifest package="io.github.zkhan93.hisab"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.EntryActivity"
            android:label="@string/title_activity_entry"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GroupsActivity"
            android:label="@string/title_activity_groups"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.DetailGroupActivity"
            android:label="@string/title_activity_detail_group"
            android:parentActivityName=".ui.GroupsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.zkhan93.hisab.ui.GroupsActivity"/>
        </activity>
    </application>

</manifest>