<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/md_blue_grey_500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Btn" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">@dimen/btn_margin_low</item>
        <item name="android:layout_marginBottom">@dimen/btn_margin_low</item>
        <item name="android:layout_marginRight">@dimen/btn_margin_low</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin_low</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Btn.Success">
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Primary">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="BtnLarge">
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:paddingTop">@dimen/btn_padding_high</item>
        <item name="android:paddingBottom">@dimen/btn_padding_high</item>
        <item name="android:paddingRight">@dimen/btn_padding_high</item>
        <item name="android:paddingLeft">@dimen/btn_padding_high</item>

    </style>

    <style name="Btn.Warning">
        <item name="colorButtonNormal">@color/colorWarning</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Danger">
        <item name="colorButtonNormal">@color/colorDanger</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Txt">
    </style>

    <style name="Txt.LARGE" parent="Txt">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
    </style>

    <style name="Txt.SMALL" parent="Txt">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
    </style>
</resources>
