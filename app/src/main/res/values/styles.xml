<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/md_red_400</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Btn" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">@dimen/btn_margin_low</item>
        <item name="android:layout_marginBottom">@dimen/btn_margin_low</item>
        <item name="android:layout_marginRight">@dimen/btn_margin_low</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin_low</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Btn.Success">
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Primary">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Large">
        <item name="android:textAppearance">?android:textAppearanceButton</item>
        <item name="android:paddingTop">@dimen/btn_padding_high</item>
        <item name="android:paddingBottom">@dimen/btn_padding_high</item>
        <item name="android:paddingRight">@dimen/btn_padding_high</item>
        <item name="android:paddingLeft">@dimen/btn_padding_high</item>

    </style>

    <style name="Btn.Large.Inverse">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Warning">
        <item name="colorButtonNormal">@color/colorWarning</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Danger">
        <item name="colorButtonNormal">@color/colorDanger</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>


    <style name="Subheading">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>

    </style>

    <style name="Body1">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Body2">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Txt">

    </style>

    <style name="listHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="Txt.LARGE" parent="Txt">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="Txt.SMALL" parent="Txt">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="ItemActionPopup" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="SignInLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
