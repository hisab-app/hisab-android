<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Btn.Primary">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Success">
        <item name="android:colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Btn.Warning">
        <item name="android:colorButtonNormal">@color/colorWarning</item>
        <item name="android:textColor">@color/md_white_1000</item>

    </style>

    <style name="Btn.Danger">
        <item name="android:colorButtonNormal">@color/colorDanger</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
</resources>
