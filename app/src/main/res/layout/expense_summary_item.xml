<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_grey_500"
    android:divider="@color/md_grey_500"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/horizontal_space_from_edge"
    android:paddingLeft="@dimen/horizontal_space_from_edge"
    android:paddingRight="@dimen/horizontal_space_from_edge"
    android:paddingStart="@dimen/horizontal_space_from_edge"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            style="@style/Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Total 48.0"/>

        <TextView
            android:id="@+id/per_person"
            style="@style/Txt.SMALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingTop="0dp"
            android:textColor="@color/md_white_1000"
            tools:text="per person"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/archive"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_archive_grey_600_24dp"
        android:tint="@color/md_white_1000"
        />
    <ImageButton
        android:id="@+id/info"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_info_grey_600_24dp"
        android:tint="@color/md_white_1000"
        />
</LinearLayout>