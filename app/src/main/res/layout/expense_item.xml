<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/horizontal_space_from_edge"
    android:paddingLeft="@dimen/horizontal_space_from_edge"
    android:paddingRight="@dimen/horizontal_space_from_edge"
    android:paddingStart="@dimen/horizontal_space_from_edge"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:maxHeight="56dp"
        android:maxWidth="56dp"
        android:src="@drawable/ic_account_circle_grey_600_48dp"
        app:civ_border_color="#99000000"
        app:civ_border_width="1dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/horizontal_space_from_edge"
        android:paddingStart="@dimen/horizontal_space_from_edge">

        <TextView
            android:id="@+id/description"
            style="@style/Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Roboto"
            android:textSize="16sp"
            tools:text="Milk - 48.0"/>

        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="added by Shiv"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_create_grey_600_18dp"
        />

    <ImageButton
        android:id="@+id/delete"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete_grey_600_18dp"

        />
</LinearLayout>
